<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-quikkly" version="0.0.1" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Quikkly</name>
    <js-module name="quikkly" src="www/quikkly.js">
        <runs />
        <clobbers target="cordova.plugins.quikkly" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Quikkly">
                <param name="android-package" value="com.quikkly.cordova.quikkly.Quikkly" />
            </feature>
        </config-file>
        <config-file parent="/manifest" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.CAMERA"/>
            <uses-feature android:name="android.hardware.camera"/>
            <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
        </config-file>
        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <activity android:name="com.quikkly.cordova.quikkly.QuikklyActivity" 
                      android:label="@string/app_name"
                      android:theme="@style/Theme.AppCompat.NoActionBar"
                      android:screenOrientation="portrait"
                      android:configChanges="orientation|keyboardHidden" />
        </config-file>
        <source-file src="src/android/com/quikkly/cordova/quikkly/Quikkly.java" target-dir="src/com/quikkly/cordova/quikkly" />
        <source-file src="src/android/com/quikkly/cordova/quikkly/QuikklyActivity.java" target-dir="src/com/quikkly/cordova/quikkly" />
        <framework src="src/android/quikkly.gradle" custom="true" type="gradleReference"/> 
        <lib-file src="src/android/quikklycore-lib-release-2.2.8.aar" />
        <lib-file src="src/android/quikkly-lib-release-2.2.8.aar" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Quikkly">
                <param name="ios-package" value="Quikkly" />
            </feature>
        </config-file>
        <source-file src="src/ios/Quikkly.swift" />
        <framework src="src/ios/Quikkly.framework" embed="true" />
    </platform>
</plugin>